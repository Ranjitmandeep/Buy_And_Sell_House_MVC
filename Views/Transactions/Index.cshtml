@model IEnumerable<Buy_And_Sell_House_Core_Webapp.Business.Transaction>

@{
    ViewData["Title"] = "Index";
}

<h2>Transactions</h2>

<p>
    <a class="btn btn-info" asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-primary">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Buyer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.House)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Buyer.BuyerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.House.HouseAddress)
            </td>
            <td>
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.TransactionId">Edit</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.TransactionId">Details</a> |
                <a class="btn btn-info" asp-action="Delete" asp-route-id="@item.TransactionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
